@model Personal_MVC_site.Models.Comment

@{
    ViewBag.Title = "Delete";
}

@{
    Layout = "~/Views/Shared/_LayoutBlog.cshtml";
}

<div class="container">

    <h2 class="text-center topspace">Are you sure you want to delete this comment?</h2>

    <hr />

    @Html.HiddenFor(model => model.PostId)

    <div class="row">
        <div class="col-md-12">
            <br />
            <br />
            <p>@Html.DisplayFor(model => model.Body)</p>
            <br />
            <br />
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-12 text-center">
                <ul class="list-inline">
                    <li>
                        <button type="submit" class="btn btn-default">
                            <i class="fa fa-trash-o"></i> Delete
                        </button>
                    </li>
                    <li>
                        <a href='@Url.Action("Index", "BlogPosts")' class="btn btn-default"><i class="fa fa-ban"></i> Cancel</a>
                    </li>
                </ul>
            </div>
        </div>
    }
</div>