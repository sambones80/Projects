@{
    ViewBag.Title = "Reset password confirmation";
}

@{
    Layout = "~/Views/Shared/_LayoutBlog.cshtml";
}

<section id="about-topspace" class="container content-section text-center portfolio-content">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <p>Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</p>
            <a href='@Url.Action("Index", "BlogPosts")' class="btn btn-default btn-lg"><i class="fa fa-chevron-circle-left"></i> Go Back to Blog</a>
        </div>
    </div>
</section>