@model IEnumerable<Bug_Tracker.Models.Attachment>

@{
    ViewBag.Title = "Index";
}

@if (User.IsInRole("Admin"))
{
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                All Attachments
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-attach">
                        <thead>
                            <tr>
                                <th class="col-sm-2">File Name <i class="fa fa-sort"></i></th>
                                <th class="col-sm-2">Description <i class="fa fa-sort"></i></th>
                                <th class="col-sm-2">Uploaded by <i class="fa fa-sort"></i></th>
                                <th class="col-sm-2">On Ticket <i class="fa fa-sort"></i></th>
                                <th class="col-sm-1">Uploaded on <i class="fa fa-sort"></i></th>
                                <th class="col-sm-2">File url <i class="fa fa-sort"></i></th>
                                <th class="col-sm-1"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.OrderBy(a => a.FileDisplayName))
                            {
                                <tr>
                                    <td class="col-sm-2">
                                        @Html.DisplayFor(modelItem => item.FileDisplayName)
                                    </td>
                                    <td class="col-sm-2">
                                        @Html.DisplayFor(modelItem => item.Body)
                                    </td>
                                    <td class="col-sm-2">
                                        @Html.DisplayFor(modelItem => item.AuthorUser.UserName)
                                    </td>
                                    <td class="col-sm-2">
                                        @Html.DisplayFor(modelItem => item.Ticket.Title)
                                    </td>
                                    <td class="col-sm-1">
                                        @Html.DisplayFor(modelItem => item.Created)
                                    </td>
                                    <td class="col-sm-2">
                                        @Html.DisplayFor(modelItem => item.FileUrl)
                                    </td>
                                    <td class="col-sm-1">
                                        <a href='@Url.Action("Edit", "Attachments", new { id = item.Id })' class="btn btn-block btn-sm btn-stack btn-warning"><i class="fa fa-pencil"></i> Edit</a>
                                        <a href='@Url.Action("Delete", "Attachments", new { id = item.Id })' class="btn btn-block btn-sm btn-stack btn-danger"><i class="fa fa-trash"></i> Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
}

<script src="~/Template/assets/js/jquery-1.10.2.js"></script>
<!-- Bootstrap Js -->
<script src="~/Template/assets/js/bootstrap.min.js"></script>
<!-- Metis Menu Js -->
<script src="~/assets/js/jquery.metisMenu.js"></script>
<!-- DATA TABLE SCRIPTS -->
<script src="~/Template/assets/js/dataTables/jquery.dataTables.js"></script>
<script src="~/Template/assets/js/dataTables/jquery.dataTables.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTables-attach').dataTable();
    });
</script>
<script src="~/Template/assets/js/custom-scripts.js"></script>