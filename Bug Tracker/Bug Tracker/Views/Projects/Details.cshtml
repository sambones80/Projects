@model Bug_Tracker.Models.Project

@{
    ViewBag.Title = "Project Details";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>

<h4>@Html.DisplayFor(model => model.Created)</h4>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Body)
        </dd>

        <dt>
            Created
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>

        <dt>
            Updated
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Updated)
        </dd>

        <dt>
            Assigned Users
        </dt>

        <dd>
            @foreach (var projectUser in Model.Users)
            {
                @projectUser.DisplayName
                <br />
            }
        </dd>

    </dl>
</div>

<ul class="list-inline">
    <li>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning"> <i class="fa fa-pencil"></i> Edit</a>
    </li>
    <li>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary"> <i class="fa fa-arrow-left"></i> Back</a>
    </li>
</ul>