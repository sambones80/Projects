@model Bug_Tracker.Models.AssignUsersViewModel

@{
    ViewBag.Title = "Project Assignment";
}

<h2>@Model.Project.Title</h2>

<br />

@using (Html.BeginForm("Assign", "Projects", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<div>
    <h3>Assign to:</h3>
	@Html.HiddenFor(model => model.Project.Id, new { })
	<br />
    <form>
        <div class="form-group">
            <label>Assign to:</label>
            @Html.ListBox("SelectedUsers", Model.Users, htmlAttributes: new { @class = "form-control", id = "mySelect", size = "20" })
        </div>
    </form>
    <ul class="list-inline">
        <li>
            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
        </li>
        <li>
            <a href="@Url.Action("Index", "Home")" class="btn btn-danger"> <i class="fa fa-ban"></i> Cancel</a>
        </li>
    </ul>
</div>
}