@model Bug_Tracker.Models.ChangeNameViewModel
@{
    ViewBag.Title = "Account Settings";
}

<h2>Update your information</h2>

@using (Html.BeginForm("ChangeName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.FName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LName, new { @class = "form-control" })
            </div>
        </div>
        @*<div class="form-group">
            @Html.LabelFor(m => m.DName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.DName, new { @class = "form-control" })
            </div>
        </div>*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <ul class="list-inline">
                    <li>
                        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Save</button>
                    </li>
                    <li>
                        <a href="@Url.Action("ManageAccount", "Account")" class="btn btn-danger"> <i class="fa fa-ban"></i> Cancel</a>
                    </li>
                </ul>
            </div>
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}