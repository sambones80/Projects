<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bugtracker</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Template/assets/css/custom-styles.css")
    @Styles.Render("~/Template/assets/js/dataTables/dataTables.bootstrap.css")
    @Styles.Render("~/Vendor/font-awesome-4.7.0/css/font-awesome.min.css")
    @Styles.Render("http://fonts.googleapis.com/css?family=Open+Sans")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    @*<div id="wrapper">*@
        <nav class="navbar navbar-default top-navbar" role="navigation">
            <div class="navbar-header">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand"><i class="fa fa-rocket"></i><strong> Trajectory</strong> <small><i> labs</i></small></a>
                
                @*@Html.ActionLink("Bugtracker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                @*<a class="navbar-brand" href="index.html"><i class="fa fa-comments"></i> <strong>MASTER </strong></a>*@
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            @Html.Partial("_LoginPartial")

        </nav>
        <!--/. NAV TOP  -->
        <nav class="navbar-default navbar-side" role="navigation">
            @*<div id="sideNav" href=""><i class="fa fa-caret-right"></i></div>*@
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">

                    <li>
                        <a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Projects")"><i class="fa fa-th-list"></i> Projects</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Tickets")"><i class="fa fa-ticket"></i> Tickets</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a href="@Url.Action("UserList", "Manage")"><i class="fa fa-users"></i> Manage Users</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Attachments")"><i class="fa fa-file"></i> Attachments</a>
                        </li>
                    }
                </ul>

            </div>

        </nav>
        <!-- /. NAV SIDE  -->
        <div id="page-wrapper">
            <div id="page-inner">

                @RenderBody()

                <footer>
                    <p>&copy; @DateTime.Now.Year - Sam Gray</p>
                </footer>

                <!-- /. ROW  -->
            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
    @*</div>*@


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Template/assets/js/jquery.metisMenu.js")
    @Scripts.Render("~/Template/assets/js/dataTables/jquery.dataTables.js")
    @Scripts.Render("~/Template/assets/js/dataTables/dataTables.bootstrap.js")
    @Scripts.Render("~/Template/assets/js/custom-scripts.js")
    @RenderSection("scripts", required: false)
</body>
</html>
