@model Budgeter.Models.AssignUsersViewModel

@{
    ViewBag.Title = "Remove User";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <div class="well well-lg well-topspace">
            <h3 class="text-center">Are you sure you want to remove this user?</h3>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-center">
                    <button type="submit" class="btn btn-default">
                        <i class="fa fa-trash-o"></i> Remove
                    </button>
                    <span class="divider"> | </span>
                    @Html.ActionLink("Back", "Assign", "Households", new { id = ViewBag.HouseholdId }, new { })
                </div>
            }
        </div>
    </div>
</div>
