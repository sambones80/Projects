@model Budgeter.Models.Household

@{
    ViewBag.Title = "Delete Household";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <div class="well well-lg well-topspace">
            <h3 class="text-center">Are you sure you want to delete @Html.DisplayFor(model => model.Name)?</h3>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <p class="text-center text-danger"><strong>WARNING,</strong> This action cannot be undone!</p>
                <div class="text-center">
                    <button type="submit" class="btn btn-default">
                        <i class="fa fa-trash-o"></i> Delete
                    </button>
                    <span class="divider"> | </span>
                    @Html.ActionLink("Cancel", "Details", "Households", new { id = Model.Id }, new { })
                </div>
            }
        </div>
    </div>
</div>
