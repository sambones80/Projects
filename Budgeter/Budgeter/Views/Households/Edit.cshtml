@model Budgeter.Models.Household

@{
    ViewBag.Title = "Edit Household";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <div class="well well-lg well-topspace">
            <h3 class="text-center">@ViewBag.Title</h3>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group login-form">
                    <p class="text-center">Change the name of your household.</p>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control login-textbox" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            }
            <div class="text-center">
                <input type="submit" value="Save" class="btn btn-default" /><span class="divider"> | </span>
                @Html.ActionLink("Cancel", "Details", "Households", new { id = Model.Id }, "") <span class="divider"> | </span>
                @Html.ActionLink("Delete Household", "Delete", "Households", new { id = Model.Id }, "")
            </div>
        </div>
    </div>
</div>
