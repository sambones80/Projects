<!DOCTYPE html>
@using Microsoft.AspNet.Identity;

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Budget Master Lite</title>
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Template/assets/css/custom-styles.css")
    @Styles.Render("~/Content/site.css")
    @Styles.Render("~/Template/assets/js/dataTables/dataTables.bootstrap.css")
    @Styles.Render("~/Vendor/font-awesome-4.7.0/css/font-awesome.min.css")
    @Styles.Render("https://fonts.googleapis.com/css?family=Playfair+Display+SC")
    @Styles.Render("https://fonts.googleapis.com/css?family=Trocchi")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>

    <nav class="navbar navbar-default top-navbar" role="navigation">
        <div class="nav-wrapper">
            <div class="navbar-header">
                <a href="@Url.Action("Index", "Home")" class="navbar-brand"><i class="fa fa-btc"></i><strong> Budget Master</strong><em> pro</em></a>
            </div>

            @Html.Partial("_LoginPartial")
        </div>

        <div class="lower-nav-bar"></div>

</nav>

    <div id="household-wrapper">
        <div id="page-inner">

            @RenderBody()

            <footer>
                <p>&copy; @DateTime.Now.Year - Sam Gray</p>
            </footer>

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Template/assets/js/jquery.metisMenu.js")
    @Scripts.Render("~/Template/assets/js/dataTables/jquery.dataTables.js")
    @Scripts.Render("~/Template/assets/js/dataTables/dataTables.bootstrap.js")
    @Scripts.Render("~/Template/assets/js/custom-scripts.js")
    @RenderSection("scripts", required: false)
    <script>
    $(document).ready(function () {
        $('#dataTables-transactions').dataTable();
    });
    </script>

</body>
