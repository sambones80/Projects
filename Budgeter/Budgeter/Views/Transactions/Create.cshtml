@model Budgeter.Models.Transaction

@{
    ViewBag.Title = "Add Transaction";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <div class="well well-lg well-topspace">
            <h3 class="text-center">Add a New Transaction</h3>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group login-form">
                    @Html.DropDownList("BankAccountId", null, "-- From Bank Account --", htmlAttributes: new { @class = "form-control login-textbox" })
                    @Html.ValidationMessageFor(model => model.BankAccountId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group login-form">
                    @Html.EditorFor(model => model.Payee, new { htmlAttributes = new { @class = "form-control login-textbox", @placeholder = "Paid to" } })
                    @Html.ValidationMessageFor(model => model.Payee, "", new { @class = "text-danger" })
                </div>
                <div class="form-group login-form">
                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control login-textbox", @placeholder = "Description" } })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
                <div class="form-group login-form">
                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control login-textbox", @placeholder = "Amount" } })
                    @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                </div>
                <div class="form-group login-form">
                    @Html.DropDownList("CategoryId", null, "-- Select Category --", htmlAttributes: new { @class = "form-control login-textbox" })
                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-default">
                        <i class="fa fa-check-square-o"></i> Save
                    </button>
                    <span class="divider"> | </span>
                    @Html.ActionLink("Back", "Details", "Households", new { id = ViewBag.HouseholdId }, new { })
                </div>
            }
        </div>
    </div>
</div>
