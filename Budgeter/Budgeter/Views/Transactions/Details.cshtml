@model Budgeter.Models.Transaction

@{
    ViewBag.Title = "Transaction Details";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <div class="well well-lg well-topspace">
            <h3 class="text-center">@ViewBag.Title</h3>
            <hr />
            <div>
                <dl class="dl-horizontal">

                    <dt>
                        Date & Time
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Created)
                    </dd>

                    <dt>
                        Amount
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Amount)
                    </dd>

                    <dt>
                        Paid to
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Payee)
                    </dd>

                    <dt>
                        Description
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt>
                        Category
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Category.Name)
                    </dd>

                    <dt>
                        Bank Account
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.BankAccount.Name)
                    </dd>

                    <dt>
                        Entered by
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.EnteredById)
                    </dd>

                </dl>
            </div>
            <p class="text-center">
                <a href="@Url.Action("Edit", "Transactions", new { householdId = ViewBag.HouseholdId, transactionId = Model.Id })" class="btn btn-default"><i class="fa fa-pencil-square-o"></i> Edit</a>
                <span class="divider"> | </span>
                @Html.ActionLink(linkText: "Back", actionName: "Details", controllerName: "Households", routeValues: new { id = ViewBag.HouseholdId }, htmlAttributes: "")
            </p>
        </div>
    </div>
</div>
