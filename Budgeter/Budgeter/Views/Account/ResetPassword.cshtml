@model Budgeter.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <div class="well well-lg well-topspace">
            <h2 class="text-center">Reset Your Password</h2>

            <section id="loginForm">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.HiddenFor(model => model.Code)
                    <div class="form-group login-form">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control login-textbox", @placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group login-form">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control login-textbox", @placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group login-form">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control login-textbox", @placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="text-center">
                            <button type="submit" class="btn btn-default">
                                <i class="fa fa-check-square-o"></i> Reset
                            </button>
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
